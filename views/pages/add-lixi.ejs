<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body class="container">

  <header>
    <%- include('../partials/header'); %>
  </header>


  <div class="container" id="main">
    <div class="card border-0 shadow my-5">
      <div class="card-body p-5">
        <h1 class="fw-light">Thêm Lì Xì</h1>

        <form class="needs-validation" novalidate>



          <% for (var i = 0; i < listMenhGia.length; i++) { %>
            <div class="form-group row mb-3">
              <label for="" class="col-sm-2 col-form-label">Bao lì xì '<%= listMenhGia[i]["menh-gia"] %>' đ</label>
              <div class="col-sm-3">
                <input type="text" class="form-control txt-add-lixi" id="<%= listMenhGia[i].id %>" placeholder="Số lượng" maxlength="10", minlength="0"> 
              </div>
            </div>
            <% } %>

            <button type="button" class="btn btn-primary" id="btn-add-lixi">Thêm Lì Xì</button>
         

        </form>


      </div>
    </div>
  </div>

  
  <%- include('../partials/successModal'); %>
  <%- include('../partials/errorModal'); %>
  <footer>
    <%- include('../partials/footer'); %>
  </footer>
  <script src="../scripts/add-lixi.js"></script>
</body>

</html>